@model lethihongnhungg.DB.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Category Details</h2>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@Model.Name</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd class="col-sm-9">
                    @if (string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/Content/images/default-placeholder.png" alt="No Image" class="img-fluid" style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/Content/images/items/" + Model.Image)" alt="@Model.Name" class="img-fluid" style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                    }
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Show)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Show)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-right">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Back to List", "Index1", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>

