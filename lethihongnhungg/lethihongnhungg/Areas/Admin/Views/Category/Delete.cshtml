@model lethihongnhungg.DB.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">Delete Category - @Model.Name</h2>

    <div class="alert alert-warning mt-4" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this category?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h4 class="card-title">Category Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                    <img src="@Url.Content("~/Content/images/items/" + Model.Image)" alt="@Model.Name" class="img-fluid" style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Show)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Show)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-right">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
            }
        </div>
    </div>
</div>
