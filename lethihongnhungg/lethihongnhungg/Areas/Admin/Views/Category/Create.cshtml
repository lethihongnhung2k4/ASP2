@model lethihongnhungg.DB.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewBag.Title Category</h2>

    @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="card mt-4">
            <div class="card-header bg-primary">
                <h4 class="card-title">Create New Category</h4>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        <input type="file" name="ImageUpload" class="form-control-file" />
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Show, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        <div class="form-check">
                            @Html.EditorFor(model => model.Show, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.LabelFor(model => model.Show, htmlAttributes: new { @class = "form-check-label" })
                            @Html.ValidationMessageFor(model => model.Show, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Back to List", "Index1", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    }
</div>